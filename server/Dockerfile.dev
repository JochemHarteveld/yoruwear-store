# Development Dockerfile for Bun/Elysia server following official Bun guidelines
# Use the official Bun image
FROM oven/bun:1 AS base
WORKDIR /usr/src/app

# Install dependencies into temp directory for caching
FROM base AS install
RUN mkdir -p /temp/dev
COPY package.json bun.lock* /temp/dev/
RUN cd /temp/dev && bun install --frozen-lockfile

# Copy node_modules from temp directory and project files
FROM base AS development
COPY --from=install /temp/dev/node_modules node_modules
COPY . .

# Set development environment
ENV NODE_ENV=development
ENV BUN_ENV=development

# Install system dependencies for health checks
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y \
    curl \
    ca-certificates && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get clean

# Expose port
EXPOSE 3010

# Start the development server  
CMD ["bun", "run", "src/index.ts"]