{
  "name": "server",
  "version": "1.0.50",
  "scripts": {
    "start": "bun run dist/index.js",
    "start:dev": "bun run --watch src/index.ts",
    "start:prod": "./server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun src/index.ts",
    "dev:watch": "bun run --watch src/index.ts",
    "build": "bun build --target bun --outdir dist --minify --sourcemap=none src/index.ts",
    "build:binary": "bun build --compile --minify-whitespace --minify-syntax --target bun-linux-x64 --outfile server src/index.ts",
    "build:js": "bun build --minify-whitespace --minify-syntax --outfile ./dist/index.js src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate-yoruwear": "bun run migrate-yoruwear.ts",
    "lint": "echo 'Linting skipped - Bun project with TypeScript checking at runtime'",
    "lint:fix": "echo 'Lint fix not configured'"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "bcryptjs": "^3.0.2",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "elysia": "latest",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bun-types": "latest"
  },
  "module": "src/index.js"
}
