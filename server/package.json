{
  "name": "server",
  "version": "1.0.50",
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "build": "echo 'No build step required for Bun'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/seed.ts",
    "db:setup": "bun run src/setup-db.ts"
  },
  "lint": "eslint \"src/**/*.{ts,js}\" --ext .ts --ignore-path ../.eslintignore || true",
  "lint:fix": "eslint --fix \"src/**/*.{ts,js}\" --ext .ts --ignore-path ../.eslintignore || true",
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "elysia": "latest",
    "mysql2": "^3.15.2"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "module": "src/index.js"
}
